<div class="cs-field-write {{#if isRequired}}csui-nodepicker-required {{/if}}">
  <div class="cs-field-write-inner ">
  <input  class="cs-nodepicker-input" type="{{inputType}}" id="{{id}}" readonly
         {{#if options.placeholder}}placeholder="{{options.placeholder}}"{{/if}} 
    {{#if options.size}}size="{{options.size}}"{{/if}}
    {{#if name}}name="{{name}}"{{/if}}
    {{#each options.data}}data-{{@key}}="{{this}}"{{/each}}
    {{#each options.attributes}}{{@key}}="{{this}}"{{/each}}
    value="{{options.anchorTitleShort}}" {{#if idBtnLabel}}
    aria-labelledby="{{idBtnLabel}}" {{/if}}
    {{#if idBtnDescription}}aria-describedby="{{idBtnDescription}}" {{/if}}
    {{#if multiFieldLabel}} aria-label="{{multiFieldLabel}}"{{/if}}
    {{#unless multiFieldLabel}}aria-label="{{options.anchorTitle}}"{{/unless}}
    title="{{options.anchorTitle}}"  tabindex="-1"/>
    <div class="csui-nodepicker-icon-container">
      <span class="csui-icon cs-clear-icon formfield_clear" title="{{clearIconTooltip}}" role="button" aria-label="{{clearIconAriaLabel}}" tabindex="0" data-cstabindex="0"></span>
      <span class="csui-icon cs-browse-icon icon-cs-browse" title="{{browseIconTooltip}}" role="button" aria-label="{{browseIconAriaLabel}}" tabindex="0" data-cstabindex="0"></span>
    </div>
    {{#xif "this.mode !== 'writeonly'"}}
      <div class="icon-container">
        <div class="csui-icon-edit inline-edit-icon edit-cancel" title="{{cancel}}"></div>
      </div>
    {{/xif}}
    {{#if options.applyFlag}}
      <div class="icon-container binf-hidden">
        <div class="csui-icon apply-all binf-hidden" title="{{titleApplyAll}}" tabindex="0"
             data-cstabindex="0"></div>
      </div>
    {{/if}}   
  </div>
</div>

{{! Note: if you change the structure below, be sure to update the code in method _prepareFieldText
          in 'controls\form\fields\nodepickerfield.view.js' }}
<div class="cs-field-read">
  <div class="cs-field-read-inner">
    <div class="btn-container">
    {{#if options.anchorTitle}}
      <a href="javascript:void(0);" tabindex="0" data-cstabindex="0" class="{{#if
      asReadonly}} csui-nodepicker-readonly {{/if}}
              {{#if options.buttonDisabled}}disabled{{/if}}"
          {{#if multiFieldLabel}}
              aria-label="{{multiFieldLabel}} {{options.anchorTitleShort}}"
          {{else}}
              aria-label="{{idBtnLabel}} {{options.anchorTitleShort}}" {{/if}}>
          {{#if options.anchorTitle}}
             <span class="{{options.disabledClass}}"
                title="{{options.anchorTitle}}">
                  {{options.anchorTitleShort}}
                </span>
         
          {{/if}}
      </a>
      {{else}}
             <span class='placeholder' title="{{noValue}}"
                {{#unless schema.readonly}}data-cstabindex='0'{{/unless}}>
             {{#unless schema.readonly}}{{emptyLabel}}{{/unless}}
             </span>
             {{/if}}       
    </div>
    <div class='icon-container'>
      <div class='csui-icon-edit inline-edit-icon icon-edit' title='{{edit}}'></div>
    </div>
  </div>
</div>

