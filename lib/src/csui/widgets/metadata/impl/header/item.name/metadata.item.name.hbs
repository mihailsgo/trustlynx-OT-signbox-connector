<div class="cs-metadata-item-name">
<span class="csui-toggle-wrapper binf-hidden">
  <span class="icon circular1 arrow_back cs-go-back binf-hidden1" style="display:none;"
        aria-label="{{goBack}}" title="{{goBack}}" tabindex="0"></span>
  <span class="csui-icon csui-metadata-listview csui-metadata-listview-expand-icon" role="button" title="{{sidebarToggleTitle}}"
        aria-label="{{sidebarToggleTitle}}" tabindex="0"></span>
</span><span class="csui-type-icon"></span>
<div role="heading" aria-level="2" class="title-header">
<span class="title binf-line-clamp" tabindex="0" title="{{name}}" aria-label="{{nameAria}}" role="button"
      aria-expanded="false">
    {{name}}
</span>
</div>

{{#unless read_only}}
  <div class="title-edit-icon-div"></div>
{{/unless}}

{{#if show_dropdown_menu}}
  <div class="csui-metadata-item-name-dropdown"></div>
{{/if}}

<div class="title-edit-div">
  <label id="{{edit_name_id}}" class="binf-hidden">{{placeholder_text}}</label>
  <span class="cs-icon-required category_required" title="{{required_tooltip}}"></span>
  <input type="text" class="title-input" placeholder="{{placeholder_text}}"
         value="{{edit_name}}" aria-labelledby="{{edit_name_id}}" aria-required="true">
  {{#if mlDataEnabled}}
    <span class="csui-multilingual-icon-label">
      <button  class="icon csui-multilingual-icon">
        {{{icon-v2 iconName="csui_action_language_switcher24" size='small' states='true'}}}
      </button>
   </span>
  {{/if}}
  {{#unless hideCancelButton}}
    <button type="button" class="csui-undo csui-edit-save inline-edit-icon" disabled title="{{save_edit_name_tooltip}}">
      {{{icon-v2 iconName="csui_action_confirm32" size='normal' states='true'}}}
    </button>
    <button type="button" class="csui-undo csui-edit-cancel inline-edit-icon" title="{{cancel_edit_name_tooltip}}">
      {{{icon-v2 iconName="csui_action_cancel32" size='normal' states='true'}}}
    </button>
  {{/unless}}
</div>
</div>
<div class="title-error-div">
  <span class="title-error"></span>
</div>

