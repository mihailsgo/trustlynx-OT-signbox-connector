{{#if isRename}}
  <input type="text" value="{{name}}" placeholder="{{namePlaceholder}}"
         class="binf-flex-row binf-form-control csui-favorite-group-input-name">
  <button type="button" class="csui-btn-save" disabled title="{{SaveEditTooltip}}" aria-label="{{SaveEditTooltip}}">
    {{{icon-v2 iconName="csui_action_confirm32" size='normal' states='true'}}}
  </button>
  <button type="button" class="csui-btn-cancel" title="{{EditCancelTooltip}}"
          aria-label="{{EditCancelTooltip}}">
    {{{icon-v2 iconName="csui_action_cancel32" size='normal' states='true'}}}
  </button>
{{else}}
  <div class="csui-favorite-group-selection-marker"></div>
  <div class="csui-favorite-group-draggable-handle">
    <span class=" icon icon-draggable-handle"></span>
  </div>
  <a role="button" href="#" class="binf-flex-row csui-favorite-group-name-link" aria-label="{{groupNameAria}}" title="{{name}}"
     tabindex="{{tabindex}}">
    <span class="csui-favorite-group-name">{{name}}</span>
  </a>
  <button type="button" class="binf-btn csui-btn-action csui-btn-edit-start"
          aria-label="{{EditStartAria}}" tabindex="{{tabindex}}">
    <span class="icon icon-edit" title="{{EditStartTooltip}}"></span>
  </button>
  <button type="button" class="binf-btn csui-btn-action csui-btn-delete"
          aria-label="{{DeleteAria}}" tabindex="{{tabindex}}">
    <span class="icon icon-circle-close" title="{{DeleteTooltip}}"></span>
  </button>
{{/if}}

