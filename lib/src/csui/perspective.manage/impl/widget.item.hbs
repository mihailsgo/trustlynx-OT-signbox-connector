<div class="csui-accordion-header" title="{{this.title}}">
  <div class="csui-accordion-header-title">{{this.title}}</div>
  <div class="csui-button-icon cs-icon icon-expandArrowDown"></div>
  <div class="csui-button-icon cs-icon icon-expandArrowUp"></div>
</div>
<div class="csui-accordion-content">
  <div class="cs-content csui-list-pannel">
    <div class="cs-list-group">
      {{#each widgets}}

        <div class="{{#if attributes.draggable}}{{else}} binf-hidden {{/if}}"
             data-widget-type="{{attributes.dataAttr}}"
             data-widget-allow-multiple="{{attributes.allowMultiple}}">
          <div class="csui-widget-item icon-draggable-handle csui-draggable-widget-item"
               data-widget-index="{{attributes.index}}" draggable="true" title="{{attributes.title}}">
            <span>{{attributes.title}}</span>
            <div class="csui-layout-icon {{attributes.icon}}"></div>
          </div>
        </div>

        <div class="{{#if attributes.draggable}} binf-hidden {{else}}{{/if}}" data-widget-type="{{attributes.dataAttr}}"
             data-widget-allow-multiple="{{attributes.allowMultiple}}">
          <div class="csui-widget-item icon-draggable-handle" title="{{attributes.disableTitle}}">
            <span>{{attributes.title}}</span>
            <div class="csui-layout-icon {{attributes.icon}}"></div>
          </div>
        </div>

      {{/each}}
    </div>
  </div>
</div>
