<div class="esoc-simple-user-widget">
  <div class="esoc-simple-user-widget-header">
    {{#if backButton}}
    <div class="arrow_back cs-go-back user-widget-view-back smart-handle-rtl" role="button" title="{{goBackTo}}"
      aria-label="{{goBackTo}}" tabindex="0" data-cstabindex="0"></div>
    {{/if}}
    <div class="esoc-userprofile-pic-actions">
      {{#if chatSettings.chatEnabled}}
      {{!-- {{#if chatSettings.presenceEnabled}} --}}
      <div id="esoc-user-profile-presence-indicator" class="esoc-user-profile-presence-indicator binf-hidden binf-col-lg-12 binf-col-md-12 binf-col-sm-12
    binf-col-xs-12">
        <div id="esoc-chat-presence-indicator-{{userid}}" class="esoc-chat-presence-indicator" title="" aria-label=""tabindex="0"></div>
      </div>
      {{!-- {{/if}} --}}
      {{/if}}
      <span role="button" class="{{^if otherUser}} esoc-full-profile-avatar-cursor {{/if}}
      image_user_placeholder esoc-userprofile-default-avatar esoc-full-profile-avatar-update
    esoc-user-default-avatar-{{userid}}" id="esoc-simple-user-default-avatar-{{uniqueId}}" title="{{messages
      .displayname}}" aria-label="{{simpleUserProfileLabel}}" tabindex="0" data-cstabindex="0">{{initials}}</span>
      <img role="button" class="{{^if otherUser}} esoc-full-profile-avatar-cursor {{/if}}
      esoc-full-profile-avatar
    esoc-full-profile-avatar-update binf-img-circle esoc-image
    esoc-upload-image-style
    esoc-userprofile-img-{{userid}}" id="esoc-simple-user-image-avatar-{{uniqueId}}" title="{{messages
      .displayname}}" alt="{{messages.displayname}}" aria-label="{{simpleUserProfileLabel}}" tabindex="0"
        data-cstabindex="0" src="#" />

      {{#if isEditable}}
      <span class="edit-user-image-placeholder edit-user"></span>
      <input type="file" id="esoc-profilepic-desktop-attachment" class="esoc-profilepic-desktop-attachment"
        name="updateProfilePic" accept="image/*" aria-label="{{simpleUserProfileLabel}}" />

      <div class="esoc-simple-profile-img-load-container esoc-social-progress-style">
          <div class="esoc-simple-profile-img-loader" id="user_icon">  
            <div id="loading_dots">
              <div id="dot_1" class="loading_dots"></div>
              <div id="dot_2" class="loading_dots"></div>
              <div id="dot_3" class="loading_dots"></div>
            </div>              
          </div>
      </div>
      {{/if}}
    </div>

    <div class="esoc-user-name csui-normal-scrolling binf-col-lg-12 binf-col-md-12 binf-col-sm-12 binf-col-xs-12">
      <span class="smart-user-name">{{display_name}}</span>
      {{#if showChatIcon}}
        <div class="esoc-user-profile-chat-comment smart-v2-icon-parent" title="Chat" tabindex="0" role="button">
          {{{icon-v2 iconName='csui_action_chat24' states='true'}}}
        </div>
      {{/if}}
      {{#if title}}
      <div class="esoc-user-title binf-col-lg-12 binf-col-md-12 binf-col-sm-12 binf-col-xs-12">{{title}}</div>
      {{/if}}
    </div>
    <div class="cs-close binf-close user-widget-view-close smart-v2-icon-parent" role="button"
      title="{{closeButtonTooltip}}" aria-label="{{closeLabel}}" tabindex="0" data-cstabindex="0">
      {{{icon-v2 iconName='csui_action_close32' states="true" }}}
    </div>
  </div>
  <div class="esoc-simple-user-widget-body">
    <div class="esoc-simple-user-widget-tabs"></div>
  </div>
  <div class="esoc-simple-user-widget-footer"></div>
</div>
<div class="esoc-simple-user-widget-backdrop"></div>
