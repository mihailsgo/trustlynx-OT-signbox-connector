{{#if showPageSizeMenu}}
  <div class="expanded-pager pager-filter csui-pagesize-menu">
    <div class="binf-dropdown csui-dropdown">
      <a href="" class="binf-dropdown-toggle" data-binf-toggle="dropdown" role="button"
         aria-expanded="false" tabindex="0" aria-label="{{pageSizeMenuAria}}">
        <div class="csui-pageSize binf-hidden-xs">{{itemsPerPage}}</div>
        <div class="csui-icon icon-expandArrowDown binf-visible-xs"></div>
      </a>
      <ul class="binf-dropdown-menu binf-dropdown-menu-left csui-dropdown-list" role="menu"></ul>
    </div>
  </div>
{{/if}}
  <div></div>
  <div class="csui-pagination">
    <div class="csui-paging-navbar">
      <ul class="binf-hidden">
        <li class="csui-overflow"></li>
      </ul>
    </div>
  </div>
<div class="csui-total-container-items {{#if checkForPageLinks}}binf-hidden-xs{{/if}}">{{totalItems}}</div>

