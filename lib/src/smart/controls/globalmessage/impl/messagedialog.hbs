<div class="csui-header csui-height-target">
  <div class="csui-header-top">
    <div class="csui-state">
      <span class="csui-state-icon csui-icon"></span>
    </div>
    <div class="csui-text" id="{{headerId}}" title="{{header_text}}">{{header_text}}</div>
    <div class="csui-action">
      {{#if details_text}}
        <div class="csui-expand">
          <button type="button" class="csui-action-moredetails csui-expand-down binf-btn binf-btn-default"
              aria-label="{{expandAria}}" title="{{expand}}" aria-haspopup="true" aria-expanded="false">
            <span class="icon csui-icon icon-expandArrowDown"></span>
          </button>
          <button type="button" class="csui-action-fewerdetails binf-hidden csui-expand-up binf-btn binf-btn-default"
              aria-label="{{collapseAria}}" title="{{collapse}}" aria-haspopup="true" aria-expanded="true">
            <span class="icon csui-icon icon-expandArrowUp"></span>
          </button>
        </div>
      {{/if}}
      <button type="button" class="csui-action-close binf-btn binf-btn-default csui-icon" title="{{closeDialog}}"
        aria-label="{{closeDialogAria}}"></button>
    </div>
  </div>
  {{#if targetLocationUrl}}
  <div class="csui-gotolocation-label">
    <a class="csui-gotolocation-url" href="{{targetLocationUrl}}" role="button">{{gotoLocation}}</a>
  </div>
  {{/if}}
</div>

{{#if message_with_link}}
<div class="csui-message-link-div">
  <a href="{{link_url}}" class="csui-message-link">{{link_label}}</a>
</div>
{{/if}}

{{#if details_text}}
<div class="csui-details-wrapper">
  <div id="csui-message-details" class="csui-details csui-minheight">
    <div class="csui-text binf-hidden" id="{{detailsId}}">{{details_text}}</div>
  </div>
</div>
{{/if}}
