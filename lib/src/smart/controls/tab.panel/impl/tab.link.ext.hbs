<a href="#{{uniqueTabId}}" id="{{linkId}}" role="tab" aria-selected="{{selected}}" aria-controls="{{uniqueTabId}}" class="cs-tablink"  tabindex="-1" data-binf-toggle="tab" title="{{title}}">
  {{#if required}}
    <span class="cs-icon-required category_required" aria-label="{{required_tooltip}}"></span>
  {{/if}}
  <span class="cs-tablink-text">{{title}}</span>
</a>
{{#if allow_delete}}
  <div class="cs-tablink-delete" title="{{delete_tooltip}}">
    <span class="icon {{delete_icon}} cs-delete-icon" role="button"
          {{#if removeable}}data-cstabindex="0"{{/if}}
          aria-label="{{deleteTabAria}}"></span>
  </div>
{{/if}}

